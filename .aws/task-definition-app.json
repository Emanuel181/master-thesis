{
  "family": "vulniq-td",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "vulniq-container",
      "image": "${IMAGE}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },
        { "name": "NEXTAUTH_URL", "value": "https://vulniq.org" },
        { "name": "DATABASE_URL", "value": "${DATABASE_URL}" },
        { "name": "AUTH_SECRET", "value": "${AUTH_SECRET}" },
        { "name": "AUTH_GITHUB_ID", "value": "${AUTH_GITHUB_ID}" },
        { "name": "AUTH_GITHUB_SECRET", "value": "${AUTH_GITHUB_SECRET}" },
        { "name": "AUTH_GOOGLE_ID", "value": "${AUTH_GOOGLE_ID}" },
        { "name": "AUTH_GOOGLE_SECRET", "value": "${AUTH_GOOGLE_SECRET}" },
        { "name": "AUTH_GITLAB_ID", "value": "${AUTH_GITLAB_ID}" },
        { "name": "AUTH_GITLAB_SECRET", "value": "${AUTH_GITLAB_SECRET}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_ID", "value": "${AUTH_MICROSOFT_ENTRA_ID_ID}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_SECRET", "value": "${AUTH_MICROSOFT_ENTRA_ID_SECRET}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_ISSUER", "value": "${AUTH_MICROSOFT_ENTRA_ID_ISSUER}" },
        { "name": "AWS_ACCESS_KEY_ID", "value": "${AWS_ACCESS_KEY_ID}" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "${AWS_SECRET_ACCESS_KEY}" },
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "AWS_S3_BUCKET_NAME", "value": "${AWS_S3_BUCKET_NAME}" },
        { "name": "BREVO_API_KEY", "value": "${BREVO_API_KEY}" },
        { "name": "EMAIL_FROM", "value": "${EMAIL_FROM}" },
        { "name": "EMAIL_SERVER_HOST", "value": "${EMAIL_SERVER_HOST}" },
        { "name": "EMAIL_SERVER_PORT", "value": "${EMAIL_SERVER_PORT}" },
        { "name": "EMAIL_SERVER_USER", "value": "${EMAIL_SERVER_USER}" },
        { "name": "EMAIL_SERVER_PASSWORD", "value": "${EMAIL_SERVER_PASSWORD}" },
        { "name": "ADMIN_EMAIL", "value": "${ADMIN_EMAIL}" },
        { "name": "MASTER_USERNAME", "value": "${MASTER_USERNAME}" },
        { "name": "MASTER_PASSWORD", "value": "${MASTER_PASSWORD}" },
        { "name": "FEEDBACK_SPREADSHEET_ID", "value": "${FEEDBACK_SPREADSHEET_ID}" },
        { "name": "GOOGLE_SERVICE_ACCOUNT_KEY", "value": "${GOOGLE_SERVICE_ACCOUNT_KEY}" },
        { "name": "SMTP_AWS_IAM_USERNAME", "value": "${SMTP_AWS_IAM_USERNAME}" },
        { "name": "HOSTNAME", "value": "0.0.0.0" }
      ],
      "secrets": [
        { "name": "NEXTAUTH_SECRET", "valueFrom": "${NEXTAUTH_SECRET_ARN}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vulniq",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
