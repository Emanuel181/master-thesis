{
  "family": "vulniq-td",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "vulniq-container",
      "image": "${IMAGE}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },
        { "name": "NEXTAUTH_URL", "value": "https://vulniq.org" }
      ],
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "${DATABASE_URL_SECRET_ARN}" },
        { "name": "NEXTAUTH_SECRET", "valueFrom": "${NEXTAUTH_SECRET_ARN}" },
        { "name": "AUTH_SECRET", "valueFrom": "${AUTH_SECRET_ARN}" },
        { "name": "AUTH_GITHUB_ID", "valueFrom": "${AUTH_GITHUB_ID_ARN}" },
        { "name": "AUTH_GITHUB_SECRET", "valueFrom": "${AUTH_GITHUB_SECRET_ARN}" },
        { "name": "AUTH_GOOGLE_ID", "valueFrom": "${AUTH_GOOGLE_ID_ARN}" },
        { "name": "AUTH_GOOGLE_SECRET", "valueFrom": "${AUTH_GOOGLE_SECRET_ARN}" },
        { "name": "AUTH_GITLAB_ID", "valueFrom": "${AUTH_GITLAB_ID_ARN}" },
        { "name": "AUTH_GITLAB_SECRET", "valueFrom": "${AUTH_GITLAB_SECRET_ARN}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_ID", "valueFrom": "${AUTH_MICROSOFT_ENTRA_ID_ID_ARN}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_SECRET", "valueFrom": "${AUTH_MICROSOFT_ENTRA_ID_SECRET_ARN}" },
        { "name": "AUTH_MICROSOFT_ENTRA_ID_ISSUER", "valueFrom": "${AUTH_MICROSOFT_ENTRA_ID_ISSUER_ARN}" },
        { "name": "AWS_ACCESS_KEY_ID", "valueFrom": "${AWS_ACCESS_KEY_ID_ARN}" },
        { "name": "AWS_SECRET_ACCESS_KEY", "valueFrom": "${AWS_SECRET_ACCESS_KEY_ARN}" },
        { "name": "AWS_REGION", "valueFrom": "${AWS_REGION_ARN}" },
        { "name": "AWS_S3_BUCKET_NAME", "valueFrom": "${AWS_S3_BUCKET_NAME_ARN}" },
        { "name": "BREVO_API_KEY", "valueFrom": "${BREVO_API_KEY_ARN}" },
        { "name": "EMAIL_FROM", "valueFrom": "${EMAIL_FROM_ARN}" },
        { "name": "EMAIL_SERVER_HOST", "valueFrom": "${EMAIL_SERVER_HOST_ARN}" },
        { "name": "EMAIL_SERVER_PORT", "valueFrom": "${EMAIL_SERVER_PORT_ARN}" },
        { "name": "EMAIL_SERVER_USER", "valueFrom": "${EMAIL_SERVER_USER_ARN}" },
        { "name": "EMAIL_SERVER_PASSWORD", "valueFrom": "${EMAIL_SERVER_PASSWORD_ARN}" },
        { "name": "ADMIN_EMAIL", "valueFrom": "${ADMIN_EMAIL_ARN}" },
        { "name": "MASTER_USERNAME", "valueFrom": "${MASTER_USERNAME_ARN}" },
        { "name": "MASTER_PASSWORD", "valueFrom": "${MASTER_PASSWORD_ARN}" },
        { "name": "FEEDBACK_SPREADSHEET_ID", "valueFrom": "${FEEDBACK_SPREADSHEET_ID_ARN}" },
        { "name": "GOOGLE_SERVICE_ACCOUNT_KEY", "valueFrom": "${GOOGLE_SERVICE_ACCOUNT_KEY_ARN}" },
        { "name": "SMTP_AWS_IAM_USERNAME", "valueFrom": "${SMTP_AWS_IAM_USERNAME_ARN}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/vulniq",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -q --spider http://localhost:3000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
